<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.fkjava.ec.commerce.mapper.ArticleTypeDao">

	<!-- 根据typeCode模糊查询，但是typeCode为空 -->
	<select id="findByCodeLike"
		resultType="org.fkjava.ec.commerce.domain.ArticleType">
		select * from ec_article_type
		<where>
			<if test="typeCode != null">
				code like #{typeCode}
			</if>
		</where>
	</select>
</mapper>